@model PaintingModel
<form action="/PaintingHttpClient/Update/@Model.PaintingId" method="post">
    <div class="mb-3">
        <label class="form-label">Painting Name</label>
        <input type="text" class="form-control" name="PaintingName" value="@Model.PaintingType">
    </div>
    <div class="mb-3">
        <label class="form-label">Author</label>
        <input type="text" class="form-control" name="PaintingType" value="@Model.PaintingName">
    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <input type="number" class="form-control" name="PaintingPrice" value="@Model.PaintingPrice">
    </div>
    <a href="/PaintingHttpClient" class="btn btn-outline-dark">Back</a>
    <button type="submit" class="btn btn-success ">Update</button>
</form>
