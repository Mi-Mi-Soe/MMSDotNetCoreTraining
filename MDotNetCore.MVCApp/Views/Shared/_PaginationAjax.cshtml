@model PageSettingModel
@{
    Layout = null;
    string url = Model.PageUrl;
    int pageNo = Model.PageNo;
    int pageSize = Model.PageSize;
    int pageCount = Model.PageCount;
}

<nav aria-label="...">
    <ul class="pagination">
        @if (pageNo == 1)
        {
            <li class="page-item disabled">
                <a class="page-link">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   href="javascript:void(0);"
                   data-id="custom-pagination"
                   data-page-no="@(pageNo - 1)"
                   data-page-size="@pageSize">Previous</a>
            </li>
        }
        @if (pageCount < 9)
        {
            @for (int i = 1; i <= pageCount; i++)
            {
                if (pageNo == i)
                {
                    <li class="page-item active" aria-current="page">
                        <a class="page-link" href="#">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link"
                           href="javascript:void(0);"
                           data-id="custom-pagination"
                           data-page-no="@(i)"
                           data-page-size="@pageSize">@i</a>
                    </li>
                }
            }
        }
        else
        {
            if (pageNo <= 3 || pageNo >= pageCount - 2)
            {
                for (int i = 1; i <= 4; i++)
                {
                    if (pageNo == i)
                    {
                        <li class="page-item active" aria-current="page">
                            <a class="page-link" href="#">@i</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link"
                               href="javascript:void(0);"
                               data-id="custom-pagination"
                               data-page-no="@(i)"
                               data-page-size="@pageSize">@i</a>
                        </li>
                    }
                }
                <li class="page-item" aria-current="page">
                    <a class="page-link" href="#">...</a>
                </li>
                for (int i = pageCount - 3; i <= pageCount; i++)
                {
                    if (pageNo == i)
                    {
                        <li class="page-item active" aria-current="page">
                            <a class="page-link" href="#">@i</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link"
                               href="javascript:void(0);"
                               data-id="custom-pagination"
                               data-page-no="@(i)"
                               data-page-size="@pageSize">@i</a>
                        </li>
                    }
                }
            }
            else
            {
                <li class="page-item">
                    <a class="page-link"
                       href="javascript:void(0);"
                       data-id="custom-pagination"
                       data-page-no="@(1)"
                       data-page-size="@pageSize">1</a>
                </li>
                <li class="page-item" aria-current="page">
                    <a class="page-link" href="#">...</a>
                </li>
                @for (int i = pageNo - 2; i <= pageNo + 2; i++)
                {
                    if (pageNo == i)
                    {
                        <li class="page-item active" aria-current="page">
                            <a class="page-link" href="#">@i</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link"
                               href="javascript:void(0);"
                               data-id="custom-pagination"
                               data-page-no="@(i)"
                               data-page-size="@pageSize">
                                @i
                            </a>
                        </li>
                    }
                }
                <li class="page-item" aria-current="page">
                    <a class="page-link" href="#">...</a>
                </li>
                <li class="page-item">
                    <a class="page-link"
                       href="javascript:void(0);"
                       data-id="custom-pagination"
                       data-page-no="@(pageCount)"
                       data-page-size="@pageSize">
                        @pageCount
                    </a>
                </li>
            }
        }
        @if (pageNo == pageCount)
        {
            <li class="page-item disabled">
                <a class="page-link">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   href="javascript:void(0);"
                   data-id="custom-pagination"
                   data-page-no="@(pageNo + 1)"
                   data-page-size="@pageSize">Next</a>
            </li>
        }
    </ul>
</nav>
